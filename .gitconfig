[commit]
    gpgsign = true
[core]
    editor = nano
[alias]
    commit = commit -S
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[credential]
    helper = store --file ~/.gitcreds
[advice]
    detachedHead = false
